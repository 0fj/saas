<div class="container">
    <h3>Contact us</h3>
    
    <%= form_for "/contacts" do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :concerns %>
        <%= f.text_area :concerns %>
        
        <%= f.submit 'Send' %>
    <% end %>
</div>